<% if product = Product.find_by(id: product_id) %>
  <% item_total = product.price * quantity %>
  <% @order_total += item_total %>

  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      Product Price: <%= product.price %>
    </td>
    <td>
      Quantity: <%= quantity %>
    </td>
    <td>
      Product Total: <%= item_total %>
    </td>
  </tr>
<% end %>
